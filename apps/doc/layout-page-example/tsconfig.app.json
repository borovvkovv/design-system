{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["./src/**/*"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "isolatedModules": true,

    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@layout/*": ["./src/*"],
      "@comp/*": ["../../libs/components/src/*"]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  },
  "references": [{ "path": "../../../libs/components" }]
}
